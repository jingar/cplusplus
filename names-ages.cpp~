#include <iostream>
#include <vector>
#include <string>
#include <sstream>

void take_names(std::vector<std::string>& v)
{
  std::cout << "Enter each name followed by a space \n";
  std::string name;
  std::string line;
  std::getline(std::cin,line);
  std::istringstream iss(line);
  while(iss >> name)
    {
      v.push_back(name);
    }
  std::cout << "finished \n";
}

void take_ages(std::vector<std::string>& v)
{
  std::cout << "Enter each name followed by a space \n";
  std::string age;
  std::string line;
  std::getline(std::cin,line);
  std::istringstream iss(line);
  while(iss >> age)
    {
      v.push_back(age);
    }
  std::cout << "finished \n";
}

int main()
{
  std::vector<std::string> names;
  std::vector<std::int> ages;

  take_names(names);
  take_ages(ages);
  
  return 0;

}
