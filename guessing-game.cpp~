#include <iostream>
#include <string>

int main()
{
  const double upper_bound = 100;
  std::string user_input = "";
  bool found = false;
  int mid = 0, higher = upper_bound, lower = 0;

  std::cout << "This is a guessing game , enter a number between 0 and 100 and i will try to guess it" << std::endl;


  while(!found)
    {
      mid = lower + (higher - lower)/2;
      std::cout << "Is your number more or less than " << mid << std::endl;
      std::cin >> user_input;
      if((higher-lower)/2 == 1)
	{      
	  std::cout << "Your number is " << mid << std::endl;
	}
      if(user_input == "more")
	{
	  lower = mid;
	}
      else if(user_input == "less")
	{
	  higher = mid;
	}
      else
	{
	  std::cout << "Unrecognized symbol" << user_input << std::endl;
	  return -1;
	}

    }
  return 0;
  
}
